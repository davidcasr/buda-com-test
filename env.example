# =================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =================================
APP_NAME=Currency Conversion API
APP_VERSION=1.0.0
APP_DESCRIPTION=API para convertir monedas fiat usando criptomonedas como intermediarias

# =================================
# CONFIGURACIÓN DE BUDA API
# =================================
BUDA_API_URL=https://www.buda.com/api/v2
REQUEST_TIMEOUT=10.0
MAX_CONNECTIONS=10
MAX_KEEPALIVE_CONNECTIONS=5

# =================================
# CONFIGURACIÓN DE CACHÉ
# =================================
CACHE_TTL_TICKER=60
CACHE_TTL_MARKETS=300

# =================================
# CONFIGURACIÓN DE LOGGING
# =================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
HOST=0.0.0.0
PORT=8000

# =================================
# CONFIGURACIÓN DE CIRCUIT BREAKER
# =================================
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30 